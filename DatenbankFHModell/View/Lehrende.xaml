<Window x:Class="DatenbankFHModell.Lehrendeclass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatenbankFHModell"
        mc:Ignorable="d"
        Title="Lehrende" Height="420" MinHeight="420" Width="220">
    <Grid Background="LightGray">
        <StackPanel Margin="5">
            <Label>Name:</Label>
            <TextBox x:Name="txt_Name"></TextBox>
            <Label>Personalnummer:</Label>
            <TextBox x:Name="txt_Pers"></TextBox>
            <Label>Wohnort:</Label>
            <TextBox x:Name="txt_Wohnort"></TextBox>
            <Label>Geschlecht:</Label>
            <TextBox x:Name="txt_Geschl"></TextBox>
            <Label>Alter:</Label>
            <TextBox x:Name="txt_Alter"></TextBox>
            <Label>Ausbildung:</Label>
            <TextBox x:Name="txt_Ausbildung"></TextBox>
            <Label>Fakultätnummer:</Label>
            <TextBox x:Name="txt_Fakultät"></TextBox>
            <Button Height="25" Margin="0,10,0,0" x:Name="btn_Insert" Click="btn_Insert_Click">Hinzufügen</Button>
            <Button Height="25" Margin="0,10,0,0" x:Name="btn_Close" Click="btn_Close_Click">Schließen</Button>
        </StackPanel>
    </Grid>
</Window>
